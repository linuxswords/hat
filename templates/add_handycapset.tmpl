{{ template "head" . }}
    <div class="container">
        <form method="post" action="/handycaps/add">
            <div class="form-group">
                <label for="name">Set Name</label>
                <input type="text" class="form-control" id="name" name="Name" required>
            </div>
            <button type="submit" class="btn btn-primary sticky-submit">Submit</button>
            {{range .BowClasses}}
            <div class="form-group d-flex align-items-center">
                <label for="factor_{{.ID}}" class="mr-2">{{.Name}} Factor</label>
                <input type="number" step="0.01" class="form-control" id="factor_{{.ID}}" name="factor_{{.ID}}">
            </div>
            {{end}}
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
{{ template "footer" }}
