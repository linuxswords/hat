{{ template "head" . }}
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Bow Class</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{ range .Archers }}
        <tr>
            <td>{{ .ID }}</td>
            <td>{{ .FirstName }}</td>
            <td>{{ .LastName }}</td>
            <td>{{ .BowClass.Name }}</td>
            <td>
                <a href="/archers/edit/{{ .ID }}" class="text-primary">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a href="/archers/delete/{{ .ID }}" class="text-danger">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
        {{ end }}
    </tbody>
</table>
<h2 class="mt-4">Add New Archer</h2>
<form action="/archers" method="post" class="mt-3">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="FirstName" class="form-control" required>
        </div>
        <div class="form-group col-md-4">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="LastName" class="form-control" required>
        </div>
        <div class="form-group col-md-4">
            <label for="bowClass">Bow Class:</label>
            <select id="bowClass" name="BowClassID" class="form-control" required>
                {{ range .BowClasses }}
                <option value="{{ .ID }}">{{ .Name }}</option>
                {{ end }}
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
{{ template "footer" }}
