{{ define "bowclasses" }}
{{ template "layout/head" . }}
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Code</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{ range .BowClasses }}
        <tr id="bowclass-{{ .ID }}">
            <td>{{ .ID }}</td>
            <td>{{ .Code }}</td>
            <td>{{ .Name }}</td>
            <td>
                <a href="/bowclasses/edit/{{ .ID }}" class="text-primary">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a href="#" class="text-danger" hx-delete="/api/bowclasses/{{ .ID }}" hx-swap="outerHTML" hx-target="#bowclass-{{ .ID }}">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
        {{ end }}
    </tbody>
</table>
<h2 class="mt-4">Add New Bow Class</h2>
<form action="/bowclasses" method="post" class="mt-3">
    <div class="form-row mb-3 align-items-center">
        <div class="col-3">
            <label for="code" class="mr-2">Code:</label>
            <input type="text" id="code" name="Code" class="form-control" required>
        </div>
        <div class="col">
            <label for="name" class="mr-2">Name:</label>
            <input type="text" id="name" name="Name" class="form-control" required>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
{{ template "layout/footer" }}
{{ end }}
