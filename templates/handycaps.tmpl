{{ template "head" }}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Set Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{ range .HandycapSets }}
        <tr>
            <td>{{ .Name }}</td>
            <td>
                <a href="/handycaps/edit/{{ .ID }}" class="text-primary">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a href="javascript:void(0);" onclick="deleteHandycap({{ .ID }})" class="text-danger">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
        {{ end }}
    </tbody>
</table>

<a href="/handycaps/add" class="btn btn-primary mt-3">Add New Handycap</a>
{{ template "footer" }}
